{
  "plugin_alias": "security-system",
  "schemas": [{
    "title": "Security System",
    "type": "object",
    "properties": {
      "accessory": {
        "title": "Accessory",
        "type": "string",
        "const": "security-system",
        "readOnly": true
      },
      "name": {
        "title": "Name",
        "type": "string",
        "default": "Security system",
        "required": true
      },
      "default_mode": {
        "title": "Default Mode",
        "type": "string",
        "default": "Off",
        "required": true,
        "enum": [
          "Off",
          "Home",
          "Night",
          "Away"
        ]
      },
      "disabled_modes": {
        "title": "Modes Disabled",
        "type": "array",
        "required": false,
        "items": {
          "title": "Mode",
          "type": "string",
          "enum": [
            "Off",
            "Home",
            "Night",
            "Away"
          ],
          "uniqueItems": true
        }
      },
      "arm_seconds": {
        "title": "Arming Delay Seconds",
        "type": "integer",
        "default": 0,
        "required": false,
        "minimum": 0
      },
      "show_mode_pause_switch": {
        "title": "Show Mode Pause Switch",
        "type": "boolean",
        "default": false,
        "required": false
      },
      "pause_minutes": {
        "title": "Minutes",
        "type": "integer",
        "default": 0,
        "required": false,
        "minimum": 0
      },
      "siren_sensor": {
        "title": "Show Siren Sensor",
        "type": "boolean",
        "default": false,
        "required": false
      },
      "siren_sensor_seconds": {
        "title": "Seconds",
        "type": "integer",
        "default": 5,
        "required": false,
        "minimum": 0
      },
      "trigger_seconds": {
        "title": "Trigger Delay Seconds",
        "type": "integer",
        "default": 0,
        "required": false,
        "minimum": 0
      },
      "reset_minutes": {
        "title": "Reset Delay Minutes",
        "type": "integer",
        "default": 10,
        "required": false,
        "minimum": 0
      },
      "siren_switch": {
        "title": "Show Siren Switch",
        "type": "boolean",
        "default": true,
        "required": false
      },
      "siren_mode_switches": {
        "title": "Show Siren Mode Switches",
        "type": "boolean",
        "default": false,
        "required": false
      },
      "override_off": {
        "title": "Trigger During Off Mode",
        "type": "boolean",
        "default": false,
        "required": false
      },
      "unsafe_mode_switches": {
        "title": "Show Mode Switches (not recommended)",
        "type": "boolean",
        "default": false,
        "required": false
      },
      "hide_mode_off_switch": {
        "title": "Hide Mode Off Switch",
        "type": "boolean",
        "default": false,
        "required": false
      },
      "audio": {
        "title": "Play Audio",
        "description": "sudo apt install ffmpeg",
        "type": "boolean",
        "default": false,
        "required": false
      },
      "audio_path": {
        "title": "Audio Path",
        "type": "string",
        "required": false,
        "placeholder": "/home/user/sounds"
      },
      "audio_language": {
        "title": "Audio Language",
        "type": "string",
        "default": "en-US",
        "required": true,
        "enum": [
          "en-US",
          "de-DE"
        ]
      },
      "audio_alert_looped": {
        "title": "Loop Alert Sound",
        "type": "boolean",
        "default": false,
        "required": false
      },
      "save_state": {
        "title": "Save Using System Storage",
        "type": "boolean",
        "default": false,
        "required": false
      },
      "server_port": {
        "title": "Port",
        "type": "integer",
        "required": false,
        "minimum": 0,
        "placeholder": 80
      },
      "server_code": {
        "title": "Code",
        "type": "integer",
        "required": false,
        "minimum": 0,
        "placeholder": 1234
      },
      "webhook_url": {
        "title": "Base URL",
        "type": "string",
        "required": false,
        "format": "uri",
        "placeholder": "http://localhost"
      },
      "webhook_target_home": {
        "title": "Target Mode: Home",
        "type": "string",
        "required": false,
        "placeholder": "/target/home"
      },
      "webhook_target_away": {
        "title": "Target Mode: Away",
        "type": "string",
        "required": false,
        "placeholder": "/target/away"
      },
      "webhook_target_night": {
        "title": "Target Mode: Night",
        "type": "string",
        "required": false,
        "placeholder": "/target/night"
      },
      "webhook_target_off": {
        "title": "Target Mode: Off",
        "type": "string",
        "required": false,
        "placeholder": "/target/off"
      },
      "webhook_current_home": {
        "title": "Current Mode: Home",
        "type": "string",
        "required": false,
        "placeholder": "/current/home"
      },
      "webhook_current_away": {
        "title": "Current Mode: Away",
        "type": "string",
        "required": false,
        "placeholder": "/current/away"
      },
      "webhook_current_night": {
        "title": "Current Mode: Night",
        "type": "string",
        "required": false,
        "placeholder": "/current/night"
      },
      "webhook_current_off": {
        "title": "Current Mode: Off",
        "type": "string",
        "required": false,
        "placeholder": "/current/off"
      },
      "webhook_alert": {
        "title": "Current Event: Alert",
        "type": "string",
        "required": false,
        "placeholder": "/event/alert"
      },
      "webhook_triggered": {
        "title": "Current Mode: Triggered",
        "type": "string",
        "required": false,
        "placeholder": "/current/triggered"
      },
      "command_target_home": {
        "title": "Target Mode: Home",
        "type": "string",
        "required": false,
        "placeholder": "echo target home"
      },
      "command_target_away": {
        "title": "Target Mode: Away",
        "type": "string",
        "required": false,
        "placeholder": "echo target away"
      },
      "command_target_off": {
        "title": "Target Mode: Off",
        "type": "string",
        "required": false,
        "placeholder": "echo target off"
      },
      "command_target_night": {
        "title": "Target Mode: Night",
        "type": "string",
        "required": false,
        "placeholder": "echo target night"
      },
      "command_current_home": {
        "title": "Current Mode: Home",
        "type": "string",
        "required": false,
        "placeholder": "echo current home"
      },
      "command_current_away": {
        "title": "Current Mode: Away",
        "type": "string",
        "required": false,
        "placeholder": "echo current away"
      },
      "command_current_night": {
        "title": "Current Mode: Night",
        "type": "string",
        "required": false,
        "placeholder": "echo current night"
      },
      "command_current_off": {
        "title": "Current Mode: Off",
        "type": "string",
        "required": false,
        "placeholder": "echo current off"
      },
      "command_alert": {
        "title": "Current Event: Alert",
        "type": "string",
        "required": false,
        "placeholder": "echo event alert"
      },
      "command_triggered": {
        "title": "Current Mode: Triggered",
        "type": "string",
        "required": false,
        "placeholder": "echo current triggered"
      }
    }
  }],
  "layout": [
    "name",
    "default_mode",
    {
      "type": "flex",
      "flex-flow": "row wrap",
      "items": [
        "arm_seconds",
        "trigger_seconds",
        "reset_minutes"
      ]
    },
    {
      "type": "div",
      "display": "flex",
      "flex-direction": "row",
      "items": [
        {
          "key": "audio",
          "flex": "1"
        },
        {
          "key": "audio_language",
          "flex": "200px"
        }
      ]
    },
    "save_state",
    {
      "type": "fieldset",
      "title": "Advanced Options",
      "description": "Need more options? You know what do do.",
      "expandable": true,
      "expanded": false,
      "items": [
        "audio_path",
        "audio_alert_looped",
        "unsafe_mode_switches",
        "hide_mode_off_switch",
        "siren_switch",
        "siren_mode_switches",
        "override_off",
        {
          "type": "div",
          "display": "flex",
          "flex-direction": "row",
          "items": [
            {
              "key": "show_mode_pause_switch",
              "flex": "1"
            },
            {
              "key": "pause_minutes",
              "flex": "200px"
            }
          ]
        },
        {
          "type": "div",
          "display": "flex",
          "flex-direction": "row",
          "items": [
            {
              "key": "siren_sensor",
              "flex": "1"
            },
            {
              "key": "siren_sensor_seconds",
              "flex": "200px"
            }
          ]
        },
        "disabled_modes"
      ]
    },
    {
      "type": "fieldset",
      "title": "Server (Optional)",
      "description": "Create a web server to interact with the security system.",
      "expandable": true,
      "expanded": false,
      "items": [
        "server_port",
        "server_code"
      ]
    },
    {
      "type": "fieldset",
      "title": "Webhooks (Optional)",
      "description": "Send security system events to a web server.",
      "expandable": true,
      "expanded": false,
      "items": [
        "webhook_url",
        "webhook_target_home",
        "webhook_target_away",
        "webhook_target_night",
        "webhook_target_off",
        "webhook_current_home",
        "webhook_current_away",
        "webhook_current_night",
        "webhook_current_off",
        "webhook_alert",
        "webhook_triggered"
      ]
    },
    {
      "type": "fieldset",
      "title": "Commands (Optional)",
      "description": "Execute commands on the device based on events.",
      "expandable": true,
      "expanded": false,
      "items": [
        "command_target_home",
        "command_target_away",
        "command_target_night",
        "command_target_off",
        "command_current_home",
        "command_current_away",
        "command_current_night",
        "command_current_off",
        "command_alert",
        "command_triggered"
      ]
    }
  ]
}